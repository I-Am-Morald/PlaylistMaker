<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsActivityButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="SearchEditText">
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@color/black</item>
    </style>

    <!-- Стили отображения треков -->

    <style name="TrackTitleStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="TrackInfoStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TrackIconStyle">
        <item name="tint">@color/white</item>
    </style>

</resources>
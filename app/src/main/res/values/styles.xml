<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityTitleTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsActivityTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="SettingsActivityButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">@color/text_grey</item>
    </style>

    <style name="SettingsImageStyle">
        <item name="android:layout_width">@dimen/settings_image</item>
        <item name="android:layout_height">@dimen/settings_image</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>

    </style>

    <style name="SearchEditText">

        <item name="android:drawableTint">@color/text_grey</item>
        <item name="android:textColorHint">@color/text_grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/edittext_light</item>
        <item name="android:tint">@color/text_grey</item>
    </style>

    <style name="BackIconImageStyle">
        <item name="android:layout_width">@dimen/back_icon_size</item>
        <item name="android:layout_height">@dimen/back_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="TitleActivityTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

</resources>